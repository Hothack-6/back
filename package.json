{
  "name": "graphql-server",
  "version": "1.0.0",
  "description": "Glow GraphQL Server",
  "license": "MIT",
  "author": "Glow App",
  "main": "build/index.js",
  "scripts": {
    "test": "jest",
    "build": "rimraf build && yarn bundle --minify",
    "migrate:create": "migrate-mongo create",
    "migrate:up": "migrate-mongo up",
    "migrate:down": "migrate-mongo down",
    "migrate:status": "migrate-mongo status",
    "bundle": "esbuild src/index.ts --outdir=build --bundle --platform=node --external:./node_modules/*",
    "debug": "ts-node-dev src/index.ts --transpileOnly",
    "dev": "concurrently \"yarn bundle --watch\" \"nodemon --watch build/index.js --on-change-only --quiet\"",
    "start": "node build/index.js",
    "static:lint": "eslint ./src --cache --fix",
    "static:check": "concurrently \"yarn static:lint\" \"yarn static:type-check\"",
    "static:type-check": "tsc --noEmit --project ./tsconfig.json",
    "generate:types": "graphql-codegen --config codegen.yml"
  },
  "resolutions": {
    "**/event-stream": "^4.0.1"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "apollo-server-express": "2.25.2",
    "axios": "^1.6.5",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "core-js": "^3.21.1",
    "dot-object": "^2.1.4",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "flat": "^5.0.2",
    "graphql": "15",
    "graphql-type-json": "^0.3.2",
    "helmet": "^3.14.0",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.21",
    "moment": "^2.22.2",
    "mongoose": "^6.3.8",
    "regenerator-runtime": "^0.13.9",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript": "2.5.1",
    "@graphql-codegen/typescript-resolvers": "^2.6.6",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/dot-object": "^2.1.2",
    "@types/flat": "^5.0.2",
    "@types/graphql": "^14.5.0",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^28.1.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.0.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "concurrently": "^7.2.2",
    "esbuild": "^0.14.27",
    "eslint": "^8.14.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.1",
    "lint-staged": ">=10",
    "nodemon": "^2.0.15",
    "prettier": "^2.7.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.5",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ]
  }
}
